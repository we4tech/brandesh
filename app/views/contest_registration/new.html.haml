:ruby
  page_title 'Registration'
  lbl_agency_info = case @user.user_type
    when 'brand_executive' then 'Corporate Info'
    when 'student' then 'Institution Info'
    else
      'Agency Info'
  end


%h1.visuallyhidden Account Information

= form_for(@user, :url => contest_registration_path) do |f|
  %ul.nav.nav-tabs
    %li.active
      %a#basic_info_tab{"data-toggle" => "tab", :href => "#basic_info"} Basic Info
    %li
      %a#agency_info_tab{"data-toggle" => "tab", :href => "#agency_info"}
        = lbl_agency_info

  = errors_for(@user).html_safe

  .tab-content{:id => ""}
    #basic_info.tab-pane.active
      = render 'user_info', :f => f
    #agency_info.tab-pane
      = render 'agency_info', :f => f

#end-of-form